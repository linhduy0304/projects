
import React from 'react'
import {
  View,
  Text,
  TouchableOpacity,
  StyleSheet,
  Image
} from 'react-native';

const NoData = ({title = 'Không có dữ liệu'}) => (
  <View style={css.ctLoading}>
    <Text style={css.txtLoading}>{title}</Text>
  </View>
)

const css = StyleSheet.create({
  ctLoading: {
    alignItems: 'center',
    paddingTop: 30,
  },
  txtLoading: {
    fontSize: 12,
    color: '#c6247d'
	},
})

export default NoData;
  